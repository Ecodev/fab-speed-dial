{
    "$schema": "http://json.schemastore.org/prettierrc",
    "tabWidth": 4,
    "singleQuote": true,
    "trailingComma": "all",
    "htmlWhitespaceSensitivity": "strict",
    "printWidth": 120,
    "arrowParens": "avoid",
    "bracketSpacing": false,
    "overrides": [
        {
            "files": ["*.md"],
            "options": {
                "tabWidth": 2
            }
        }
    ]
}
